<Window x:Class="Chatt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatt"
        mc:Ignorable="d"
        Title="TCP/IP Client" Height="344" Width="602">
    <Grid>
        <Label Content="Server:" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIP" HorizontalAlignment="Left" Margin="67,15,0,0" TextWrapping="Wrap" Text="127.0.0.1:9000" VerticalAlignment="Top" Width="509"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="536,287,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Margin="67,48,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="509" Height="193" VerticalScrollBarVisibility="Visible"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="67,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="509"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="480,287,0,0" VerticalAlignment="Top" Width="42"/>
        <Label Content="Message:" HorizontalAlignment="Left" Margin="10,251,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
